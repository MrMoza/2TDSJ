@model Fiap05.Web.MVC.Models.Livro

@{
    ViewBag.Title = "Editar";
}

<h2>Editar</h2>

@using (Html.BeginForm())
{
    @Html.HiddenFor(l => l.LivroId)
    <div class="form-group">
        @Html.LabelFor(l => l.Titulo)
        @Html.TextBoxFor(l => l.Titulo, new { @class = "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(l => l.DataCadastro)
        @Html.TextBoxFor(l => l.DataCadastro, new { @class = "form-control"})
    </div>
    <div class="form-group">
        @Html.CheckBoxFor(l => l.Disponivel)
        @Html.LabelFor(l => l.Disponivel)
    </div>
    <input type="submit" value="Editar" class="btn btn-primary" />
}
