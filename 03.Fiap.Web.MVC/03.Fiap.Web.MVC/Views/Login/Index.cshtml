
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<form action="/Login/Logar" method="post">
    <div class="form-group">
        <label for="id-user">Usuario</label>
        <input type="text" name="login" id="id-user" class="form-control" />
    </div>
    <div class="form-group">
        <label for="id-senha">Senha</label>
        <input type="password" name="senha" id="id-senha" class="form-control" />
    </div>
    <input type="submit" value="Entrar" class="btn btn-primary" />
    <span>@TempData["msg"]</span>
</form>

